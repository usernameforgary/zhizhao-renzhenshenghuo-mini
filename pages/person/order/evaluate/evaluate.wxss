/* pages/person/order/evaluate.wxss */
._page {
  background-color: #efefef;
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
._top {
  width: 645rpx;
  height: 253rpx;
  margin-top: 37rpx;
  background-color: #fff;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
._top ._p1 {
  font-size: 33rpx;
  text-align: center;
  margin-bottom: 39rpx;
  margin-left: 19rpx;
  margin-top: 21rpx;
  color: rgba(38, 38, 38, 1);
}
._top ._p2 {
  width: 467rpx;
  height: 54rpx;
  background-color: #efefef;
  border-radius: 27rpx 0 0 27rpx;
  display: flex;
  align-items: center;
}
._top ._p2 ._pic {
  display: block;
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-right: 19rpx;
}
._top ._p2 ._name {
  font-size: 21rpx;
  font-weight: 500;
  color: rgba(35, 35, 35, 1);
  line-height: 54rpx;
}
._top ._p2 ._class {
  font-size: 17rpx;
  font-weight: 500;
  color: rgba(35, 35, 35, 1);
  line-height: 54rpx;
  margin-left: 54rpx;
}
._top ._p3 {
  margin-top: 15rpx;
  width: 347rpx;
  display: flex;
  justify-content: space-between;
}
._top ._p3 > view {
  position: relative;
}
._top ._p3 > view ._s {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 19rpx;
}
._top ._p3 > view ._n {
  position: absolute;
  bottom: -16rpx;
  text-align: center;
  left: 50%;
  width: 200%;
  transform: translateX(-50%);
  font-size: 17rpx;
  color: rgba(0, 0, 0, 1);
}
._center {
  margin-top: 39rpx;
  width: 645rpx;
  /* height: 687rpx; */
  padding-bottom: 26rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
._center ._p1 {
  text-align: center;
  margin-top: 43rpx;
  margin-bottom: 56rpx;
  font-size: 33rpx;
  color: rgba(38, 38, 38, 1);
}
._center ._p2 {
  width: 456rpx;
  height: 54rpx;
  background-color: #efefef;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  margin-bottom: 33rpx;
}
._center ._p2 ._s {
  display: block;
  width: 59rpx;
  height: 59rpx;
  margin-right: 28rpx;
}
._center ._p2 ._t {
  font-size: 21rpx;
  color: rgba(35, 35, 35, 1);
}
._center ._p3 {
  width: 347rpx;
  display: flex;
  justify-content: space-between;
}
._center ._p3 > view {
  position: relative;
}
._center ._p3 > view ._s {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 19rpx;
}
._center ._p3 > view ._n {
  position: absolute;
  bottom: -16rpx;
  text-align: center;
  left: 50%;
  width: 200%;
  transform: translateX(-50%);
  font-size: 17rpx;
  color: rgba(0, 0, 0, 1);
}
._center ._p4 {
  margin-top: 42rpx;
  width: 586rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 5rpx;
  box-sizing: border-box;
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
._center ._p4 ._t {
  width: 100%;
  height: 112rpx;
  font-size: 21rpx;
}
._center ._p4 ._imglist {
  display: flex;
  position: relative;
  flex-wrap: wrap;
}
._center ._p4 ._imglist > view {
  width: 137rpx;
  height: 137rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: contain;
  margin-right: 10rpx;
  margin-top: 10rpx;
  position: relative;
}
._center ._p4 ._imglist > view ._del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  line-height: 30rpx;
  text-align: center;
  font-size: 21rpx;
}
._center ._p4 ._imglist > view:nth-child(1),
._center ._p4 ._imglist > view:nth-child(2),
._center ._p4 ._imglist > view:nth-child(3) {
  margin-top: 0;
}
._center ._p4 ._imglist > view:nth-child(3n) {
  margin-right: 0;
}
._center ._p4 ._imglist > view._s {
  background-image: url("http://www.91taojiao.cn/image/zhaopian.jpg");
}
._center ._p4 ._tip {
  position: absolute !important;
  width: 374rpx !important;
  height: 21rpx !important;
  line-height: 21rpx;
  right: -21rpx;
  bottom: -1rpx;
  font-size: 21rpx;
  color: rgba(91, 91, 91, 1);
}
._bottom {
  width: 457rpx;
  height: 64rpx;
  background: linear-gradient(
    90deg,
    rgba(255, 78, 80, 1),
    rgba(249, 166, 35, 1)
  );
  border-radius: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 64rpx;
  font-size: 25rpx;
  margin-top: 50rpx;
  margin-bottom: 56rpx;
}
