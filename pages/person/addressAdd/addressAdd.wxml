             <text  style="color:#fff">删除收货地址</text> 
          </view>
        </view>
        <!-- 1111111111111111111 -->
        <view style='display:flex;justify-content:space-around;border-bottom: 1px solid #d9d9d9;background: #000; margin-top: 10px' bindtap="saveAddress">
          <!-- <view class="form-default" style='display:flex; align-items:center;justify-content:center;'>
