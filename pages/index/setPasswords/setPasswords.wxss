page{
  min-height:100%;
   background-color: #F2f2f2;
}
.container{
    width: 100%;
  
}
.status-box{
    width:100%;
    height: 40px;
    line-height: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}
.status-box .status-label{
    width: 150rpx;
    height: 100%;
    text-align: center;
    font-size:28rpx;
    color:#353535;
    box-sizing: border-box;
    position: relative;
}
.status-box .status-label.active{
    color:#e64340;
    border-bottom: 6rpx solid #e64340;
}
.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}
.order-list{
    width: 100%;
    padding: 20rpx;
    background: #fff;
}
.order-list .a-order{
    margin-bottom:30rpx;
    background-color: #fafafa;
    
    border-radius: 5px;
}
.a-order  .goods-info,
.goods-img-container{
    width: 720rpx;
    margin-left: 30rpx;
    border-top: 1rpx solid #eee;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
}
.goods-price {
  font-size:26rpx;
  text-align: right;
  margin-bottom:30rpx;
}
.goods-price .p {
  font-size:36rpx;
  color:#e64340;
}
.goods-info .img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 30rpx;
    background-color: #f7f7f7;
}
.goods-info .img-box .goods-img,
.goods-img-container .img-box .goods-img{
    width: 120rpx;
    height: 120rpx;
}
.goods-info  .goods-des{
    font-size:26rpx;
    color:#000000;
}
.goods-img-container{
    height: 180rpx;
    box-sizing: border-box;
    white-space: nowrap;
}
.goods-img-container .img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #f7f7f7;
    display: inline-block;
}
.price-box{
    display: flex;
    flex-direction:row-reverse;
    padding-bottom: 30rpx;
}
.price-box .btn{
    width: 166rpx;
    height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #ccc;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size:26rpx;
}
.price-box .active{
    border:1px solid #e64340;
    color: #e64340;
}
.remark {
  color:#e64340;
  margin-bottom: 20rpx;
}
.xq{
margin-left: 70rpx;
border: 1px solid #ccc;
text-align: center;
width: 160rpx;
border-radius: 10px;
padding: 5rpx;

}
.bot{
padding-bottom:  10px;
  display: flex;
}
.weui-search-bar {
  position: relative;
 padding: 8px 15px 0px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
margin-top: 20rpx;
margin-bottom: 20rpx;

}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 6px;
  top: 2px;
}
.weui-search-bar__input {
  height: 28px;
  font-size: 14px;
  padding-left: 5px;

}
.weui-search-bar__cancel-btn {
white-space: nowrap;
background: #000;
color: #fff;
border-radius: 10px;

width: 100rpx;
text-align: center;
height: 58rpx;
line-height: 58rpx;
position: absolute;
right: 23rpx;
z-index: 10
}
.refresh{
 position: absolute;
top: 50%;
right: 3%;
background: #000;
color: #fff;
padding: 20rpx;
border-radius: 50%;
font-size: 24rpx;

}