.logon image{
  width: 100%;
}
.denglu{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 50rpx;
 margin: 0 22rpx 0rpx 22rpx;
 padding-top: 20rpx;
 padding-bottom: 12rpx;
  border-bottom: 1px solid lightgrey;
}
.denglu input{
  margin-left: 40rpx;
  font-size: 35rpx;
}
.denglu image{
  width: 40rpx;
  height: 45rpx;
}
.mima{
   padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
 margin: 0 22rpx 0 22rpx;
 padding-top: 24rpx;
 padding-bottom: 12rpx;
  border-bottom: 1px solid lightgrey;
}
.mima input{
  margin-left: 40rpx;
  font-size: 35rpx;
}
.mima image{
  width: 45rpx;
  height: 40rpx;
}
.mima button{
  font-size: 28rpx; 
  color: white;
  min-width: 200rpx;
  line-height: 68rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
}
.enter{
   margin: 100rpx 100rpx 20rpx 120rpx;
   text-align: center;
   background-color: #8b8b8b;
   padding: 15rpx;
   border-radius: 20rpx;
   color: white;
   font-size: 35rpx;
}
.enter text{
  text-align: center;
}
.failure{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}
.failure-hint{
  width: 600rpx;
  border-radius: 20rpx;
  background: white;
}
.failure-hint view:first-child{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
}
.failure-hint view:nth-child(2){
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #8b8b8b;
  padding-bottom: 50rpx;
}