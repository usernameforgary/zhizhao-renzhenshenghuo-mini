page{
  min-height:100%;
   background-color: #F2f2f2;
}
.container{
    width: 100%;
   
}
.status-box{
    width:100%;
    height: 40px;
    line-height: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}
.status-box .status-label{
    width: 150rpx;
    height: 100%;
    text-align: center;
    font-size:28rpx;
    color:#353535;
    box-sizing: border-box;
    position: relative;
}
.status-box .status-label.active{
    color:#e64340;
    border-bottom: 6rpx solid #e64340;
}
.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}
.order-list{
    width: 100%;
    padding: 35rpx 0 0 0;
}
.order-list .a-order{
  margin: auto;
    margin-bottom:30rpx;
    background-color: #fff;
    width: 700rpx;
    border-radius: 8px;
    overflow:hidden;
    box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}
.a-order  .goods-info,
.goods-img-container{
    width: 720rpx;
    margin-left: 30rpx;
    border-top: 1rpx solid #eee;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
}
.goods-price {
  font-size:22rpx;
  display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 45rpx;
}
.l>view{
  width: 100%;
}
.l .line{
  margin:10rpx 0;
}
.l .line>view{
  border-bottom: 1px solid #949494;
}
.l .line>view+view{
   border:0;
}
.goods-price .p {
  /* font-size:36rpx; */
  color:#e64340;
}
.goods-info .img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 30rpx;
    background-color: #f7f7f7;
}
.goods-info .img-box .goods-img,
.goods-img-container .img-box .goods-img{
    width: 120rpx;
    height: 120rpx;
}
.goods-info  .goods-des{
    font-size:26rpx;
    color:#000000;
}
.goods-img-container{
    height: 180rpx;
    box-sizing: border-box;
    white-space: nowrap;
}
.goods-img-container .img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #f7f7f7;
    display: inline-block;
}
.price-box{
    display: flex;
    flex-direction:row-reverse;
    padding-bottom: 30rpx;
}
.price-box .btn{
    width: 166rpx;
    height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #ccc;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size:26rpx;
}
.price-box .active{
    border:1px solid #e64340;
    color: #e64340;
}
.remark {
  color:#e64340;
  margin-bottom: 20rpx;
}